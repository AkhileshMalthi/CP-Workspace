{
    "version": "2.0.0", // Defines the version of the tasks configuration format.
    "tasks": [
      {
        "label": "Run DSA Problem",
        "type": "shell",
        "command": "python",
        "args": [
          "${file:=main.py}"
        ],
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": [],
        "options": {
          "shell": {
            "executable": "powershell.exe"
          },
          "env": {
            "PYTHONIOENCODING": "utf-8"
          }
        }
      },
      {
        "label": "Run Problem",
        "type": "shell",
        "command": "python3",
        "args": [
          "${file:=main.py}"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "close": true
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8",
            "DEBUG": "1"
          },
          "timeout": "1000"
        }
      },
      {
        "label": "Run Test Cases",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/run_testcases.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8",
            "SOLUTION_FILE": "${file:=main.py}"
          }
        }
      },
      {
        "label": "Time Solution",
        "type": "shell",
        "command": "python3",
        "args": [
          "-m",
          "scripts.time_solution"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8",
            "DEBUG": "1"
          }
        }
      },
      {
        "label": "Reset Main File",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/reset.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8"
          }
        }
      },
      {
        "label": "Clear Input File",
        "type": "shell",
        "command": "echo '' > io_files/input.txt",
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Clear Output File",
        "type": "shell",
        "command": "echo '' > io_files/output.txt",
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Clear Debug File",
        "type": "shell",
        "command": "echo '' > io_files/debug.txt",
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Clear Testcases File",
        "type": "shell",
        "command": "echo '' > io_files/testcases.txt",
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Clear All IO Files",
        "type": "shell",
        "command": "echo '' > io_files/input.txt && echo '' > io_files/output.txt && echo '' > io_files/debug.txt && echo '' > io_files/testcases.txt",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Save Main Solution",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/move_main.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "focus": true
        },
        "problemMatcher": []
      },
      {
        "label": "Move Solution",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/move_solution.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "focus": true
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "VSCODE_ACTIVE_FILE": "${file}"
          }
        }
      },
      {
        "label": "Open Problem URL",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/open_problem_url.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Load First Test Case",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/get_first_testcase.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8",
            "SOLUTION_FILE": "${file:=main.py}"
          }
        }
      },
      {
        "label": "Delete This Problem",
        "type": "shell",
        "command": "python3",
        "args": [
          "scripts/delete_problem.py"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared",
          "focus": true
        },
        "problemMatcher": [],
        "options": {
          "env": {
            "PYTHONIOENCODING": "utf-8",
            "VSCODE_ACTIVE_FILE": "${file}"
          }
        }
      },
      {
        "label": "Done",
        "dependsOrder": "sequence",
        "dependsOn": [
          "Move Solution",
          "Clear Input File",
          "Clear Output File",
          "Close Active File"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Close Active File",
        "type": "shell",
        "command": "${command:workbench.action.closeActiveEditor}",
        "presentation": {
          "reveal": "never",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Run Active Python File",
        "type": "shell",
        "command": "python3",
        "args": [
          "${file}"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": [
          "$python"
        ]
      }
    ]
  }
